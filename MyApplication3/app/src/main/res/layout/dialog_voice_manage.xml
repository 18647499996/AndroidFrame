<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_voice_dialog_bg"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <ImageView
            android:id="@+id/dialog_voice_manage_img_run"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_voice_bg"
             />

        <ImageView
            android:id="@+id/dialog_voice_manage_img_cancel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_voice_cancel"
            android:visibility="invisible"/>


        <TextView
            android:id="@+id/dialog_voice_manage_tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_voice_manage_img_run"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="手指上划，取消发送"
            android:textColor="@color/with"
            android:textSize="@dimen/sp_12"
            tools:background="@drawable/corners_voice_cancel_tv_bg" />

    </RelativeLayout>
</LinearLayout>